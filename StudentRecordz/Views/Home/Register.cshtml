@model Student;


<h4>Student Records</h4>

<div class="container">
	<form asp-action="RegisterEntry" asp-controller="Home">
		<div class="mb-3">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" name="Name" placeholder="Name of student"/>
		</div>
		<div class="mb-3">
			<label class="form-label">Address</label>
			<input type="text" class="form-control" name="Address" placeholder="address of student" />
		</div>
		<div class="mb-3">
			<label class="form-label">Email</label>
			<input type="email" name="Email" class="form-control" id="exampleInputEmail1" placeholder="student email" />
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>

	</form>
</div>
